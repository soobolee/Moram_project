@charset "UTF-8";

	h1, nav, footer{
			text-align: center;
		}
		html, body, .container{
			height: 100%;
			width : 100%;
			padding : 0%;
			margin : 0%;
		}
		header{
			padding-top: 0.6%;
			height : 10%;
			text-align: center;
			background : #f8f8f8;
			border-bottom: 1px solid #e9e9e9;
		}
		nav{
			height : 1000px;
			width : 13%;
			float : left;
			border-right: 2px solid #e9e9e9;
		}
		#menulist{
			padding-top: 40px;
		}
		footer{
			clear : both;
			background: #f8f8f8;
			height: 10%;		
		}
		
		input[id*="answer"] + label[name="m"] {
			display: block;
			padding : 20px;
			border-bottom: 0;
			color: blue;
			font-weight: 900;
			cursor : pointer;
			position: relative;
		}

		input[id*="answer"] + label[name="m"] + div{
			max-height: 0;
			transition : all, .35s;
			overflow: hidden;
			background: white;
			font-size: 11px;
		}
		
		input[id="answer"] + label[name="m"] + div a{
			display: inline-block;
			padding: 20px;
		}
		input[id*="answer"]:checked + label[name="m"] + div{
 			max-height: 200px; 
 		} 
		
		a{
			text-decoration: none; 
		}
		
		a:link, a:visited { 
			color:pink; 
		}
		
		a:hover, a:active{
			color : purple;
		}
		section{
			float : right;
			height: auto;
			width: 86%;
		}
		